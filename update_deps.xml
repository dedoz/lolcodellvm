<project name="Update Dependencies" default="get_libs">
    <target name="get_libs">
        <mkdir dir="lib"/>
        <get src="http://repo1.maven.org/maven2/org/antlr/antlr4-runtime/4.1/antlr4-runtime-4.1.jar"
             dest="lib/antlr4-runtime-4.1.jar"/>
        <get src="http://repo1.maven.org/maven2/org/ow2/asm/asm-debug-all/4.2/asm-debug-all-4.2.jar"
             dest="lib/asm-4.2.jar"/>
        <get src="http://repo1.maven.org/maven2/junit/junit/4.11/junit-4.11.jar"
             dest="lib/junit-4.11.jar"></get>
        <get src="http://repo1.maven.org/maven2/org/hamcrest/hamcrest-all/1.3/hamcrest-all-1.3.jar"
             dest="lib/hamcrest-all-1.3.jar"></get>
    </target>
</project>